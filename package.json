  },
  "build": {
    "electronVersion": "34.2.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "34.2.0",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "electron-reload": "^2.0.0-alpha.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "wait-on": "^8.0.2"
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "mysql2": "^3.12.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.0.8"
  }
}
